filebeat:
  prospectors:
    -
      paths:
<% node[:deploy].each do |application, deploy| %>
<%   if deploy[:application_type] == 'rails' %>
        - <%= deploy[:deploy_to] =%>/shared/log/<%= deploy[:rails_env] =%>.log
<%   end %>
<% end %>
      input_type: log
  registry_file: /var/lib/filebeat/registry
output:
  logstash:
    hosts: <%= node['logstash']['beats_hosts'] =%>

logging:
  files:
    rotateeverybytes: 10485760 # = 10MB
