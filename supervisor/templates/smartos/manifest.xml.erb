<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='export'>
  <service name='site/supervisord' type='service' version='0'>
    <create_default_instance enabled='false' />
    <single_instance />
    <dependency name='loopback' grouping='require_all' restart_on='error' type='service'>
      <service_fmri value='svc:/network/loopback:default' />
    </dependency>
    <exec_method name='start' type='method' exec='/opt/local/bin/supervisord <%= @node['supervisor']['daemon_options'] %>' timeout_seconds='30'>
    </exec_method>
    <exec_method name='stop' type='method' exec=':kill' timeout_seconds='30' />
    <stability value='Evolving' />
    <template>
      <common_name>
        <loctext xml:lang='C'>supervisord</loctext>
      </common_name>
      <documentation>
        <doc_link name='supervisord Official' uri='http://supervisord.org/' />
      </documentation>
    </template>
  </service>
</service_bundle>
