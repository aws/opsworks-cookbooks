<dataConfig>
  <dataSource type="JdbcDataSource" driver="com.mysql.jdbc.Driver"
    url="jdbc:mysql://<%= @db_url %>:3306/<%= @db_name %>"
    password="<%= @db_password %>"
    autoReconnect="true"
    user="<%= @db_user %>"
    name="seller_deals"
