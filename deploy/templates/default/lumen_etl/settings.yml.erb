default: &default

<%= @etl_env %>:
  <<: *default
  moneta:
    backend: <%= @etl_settings[:moneta][:backend] %>
    options: 
    <% @etl_settings[:moneta][:options].each do |k, v| %>
      <%= sprintf('%s: %s', k, v) %>
    <% end %>

  rollbar:
    token: <%= @etl_settings[:rollbar][:token] %>
    enabled: <%= @etl_settings[:rollbar][:enabled] %>
  
  hyena:
    host: <%= @etl_settings[:hyena][:host] %>
    username: <%= @etl_settings[:hyena][:username] %>
    password: <%= @etl_settings[:hyena][:password] %>
    database: <%= @etl_settings[:hyena][:database] %>

  joomla:
    host: <%= @etl_settings[:joomla][:host] %>
    username: <%= @etl_settings[:joomla][:username] %>
    password: <%= @etl_settings[:joomla][:password] %>
    database: <%= @etl_settings[:joomla][:database] %>

  jaguar:
    host: <%= @etl_settings[:jaguar][:host] %>
    username: <%= @etl_settings[:jaguar][:username] %>
    password: <%= @etl_settings[:jaguar][:password] %>
    database: <%= @etl_settings[:jaguar][:database] %>


  lumen:
    db:
      host: <%= @etl_settings[:lumen][:host] %>
      user: <%= @etl_settings[:lumen][:username] %>
      password: <%= @etl_settings[:lumen][:password] %>
      dbname: <%= @etl_settings[:lumen][:database] %>
    rest_urls:
      calculate_rates_agreements: <%= @etl_settings[:lumen][:calculate_rates_agreements_url] %>
      check_status_agreements: <%= @etl_settings[:lumen][:check_status_agreements_url] %>
