PassengerRoot <%= node[:passenger][:root_path] %>
PassengerRuby <%= File.exists?(node[:passenger][:ruby_wrapper_bin]) ? node[:passenger][:ruby_wrapper_bin] : node[:passenger][:ruby_bin] %>
PassengerMaxPoolSize <%= node[:rails][:max_pool_size] ? node[:rails][:max_pool_size] : node[:passenger][:max_pool_size]%>
PassengerStatThrottleRate <%= node[:passenger][:stat_throttle_rate] %>
<% if node[:passenger][:version] =~ /^4/ %>
PassengerMaxPreloaderIdleTime <%= node[:passenger][:rails_app_spawner_idle_time] %>
<% else %>
RailsAppSpawnerIdleTime <%= node[:passenger][:rails_app_spawner_idle_time] %>
RailsFrameworkSpawnerIdleTime <%= node[:passenger][:rails_framework_spawner_idle_time] %>
<% end %>
PassengerPoolIdleTime <%= node[:passenger][:pool_idle_time] %>
PassengerMaxInstancesPerApp <%= node[:passenger][:max_instances_per_app] %>
PassengerMaxRequests <%= node[:passenger][:max_requests] %>
PassengerHighPerformance <%= node[:passenger][:high_performance_mode] %>
RailsSpawnMethod <%= node[:passenger][:rails_spawn_method] %>
